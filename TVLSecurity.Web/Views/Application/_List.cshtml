@model TVLSecurity.Web.Models.ApplicationFormViewModel

<div class="text-right clearfix" style="margin-bottom:10px">
    <button type="button" class="btn btn-primary" onclick="return openPopup('/Security/Application/Create')">
        Add New
    </button>
</div>


<form id="frmList" method="post" action="">
    <table id="gridListTable" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
        <thead style="background-color: #3f5c6c; color:#fff;text-align:center">
            <tr>
                <th>
                    Application Name
                </th>
                <th>
                    Application Title
                </th>
                <th>
                    Description
                </th>
                <th>
                    Edit
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.NoDataFound)
            {
                @Model.Message
            }
            else
            {
                foreach (var item in Model.ApplicationList)
                {
                    <tr>
                        <td>
                            @item.ApplicationName
                        </td>
                        <td>
                            @item.ApplicationTitle
                        </td>
                        <td>
                            @item.Description
                        </td>
                        <td>
                            <a href="javascript:" onclick="return openPopup('/Security/Application/Edit/@item.ApplicationId')">
                                <i class="fa fa-pencil-square-o"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>   
</form>
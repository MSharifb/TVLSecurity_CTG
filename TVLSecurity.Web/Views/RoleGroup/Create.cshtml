@model Entity.RoleGroup

@Html.ValidationSummary("Create was unsuccessful. Please correct the errors and try again.")

@if (Model.RoleGroupsId > 0)
{
    <label class="successmessage">Data Updated Successfully</label>
}
<form id="frmRoleGroupCreate" method="post" action="">
    <div style="height:100px;" id="divControlContainer">
        <table>
            <tr>
                <td>
                    Role Group Title
                </td>
                <td>
                    @Html.TextBox("RoleGroupsTitle", Model.RoleGroupsTitle)
                </td>
            </tr>
        </table>
    </div>
    <div class="divSpacer">
    </div>
    <div class="divButtonContainer">
        <a href="#" onclick="return SaveData('frmRoleGroupCreate','/Security/RoleGroup/Create','MyDialog');"
           class="btnSave"></a>
        <input id="btnSave" name="btnSave" type="submit" value="Save" style="visibility: hidden" />
    </div>
</form>
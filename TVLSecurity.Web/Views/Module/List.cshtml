@model TVLSecurity.Web.Models.ModuleFormViewModel

<div class="text-right clearfix" style="margin-bottom:10px">
    <button type="button" class="btn btn-primary" onclick="return openPopup('/Security/Module/Create')">
        Add New
    </button>
</div>

<form id="frmList" method="post" action="">    
    <table id="gridListTable" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
        <thead style="background-color: #3f5c6c; color:#fff;text-align:center">
            <tr>
                <th>
                    Module
                </th>
                <th>
                    Module Title
                </th>
                <th>
                    Description
                </th>
                <th>
                    Sort Order
                </th>
                <th>
                    Application
                </th>
                <th>
                    Edit
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.NoDataFound)
            {
                @Model.Message
            }
            else
            {
                foreach (var item in Model.ModuleList)
                {
                    <tr>
                        <td>
                            @item.ModuleName
                        </td>
                        <td>
                            @item.ModuleTitle
                        </td>
                        <td>
                            @item.Description
                        </td>
                        <td>
                            @item.SortOrder
                        </td>
                        <td>
                            @item.ApplicationName
                        </td>
                        <td>
                            <a href="javascript:" onclick="return openPopup('/Security/Module/Edit/@item.ModuleId ')">
                                <i class="fa fa-pencil-square-o"></i>
                            </a>
                        </td>
                    </tr>
                }

            }
        </tbody>

    </table>

</form>

